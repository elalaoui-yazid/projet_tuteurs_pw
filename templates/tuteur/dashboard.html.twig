{% extends "base.html.twig" %}

{% block title %}DashBoard - {{ userName }} {% endblock %}

{% block body %}

    {{ parent() }}

    <style>
        .messages {
            max-width: 500px;
            margin: 20px auto;
        }

        .erreurs {
            background: #ffe5e5;
            border-left: 5px solid #ff4d4d;
            padding: 15px 20px;
            border-radius: 8px;
            font-family: Arial, sans-serif;
            box-shadow: 0 0 8px rgba(0,0,0,0.05);
        }

        .erreurs h3 {
            color: #cc0000;
            margin: 0;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
    </style>

    {% if message is defined %}
        <div class="messages">
            <div class="erreurs">
                <h3>â“˜ {{ message }}</h3>
            </div>
        </div>
    {% endif %}

    <h1>Bonjour, {{ userName }}</h1>

{% endblock %}
